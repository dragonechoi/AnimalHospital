<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_chp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 변경"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textColor="@color/black"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_chp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_android_black_24dp"
        android:layout_below="@id/tv_chp"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"/>

    <EditText
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="닉네임을 입력하시오"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/tv_chName"
        android:maxLength="10"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:imeOptions="actionDone"/>
    <TextView
        android:id="@+id/tv_chName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 "
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/civ_chp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>



    <Button
        android:id="@+id/ch_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check"
        android:textAllCaps="false"
        android:backgroundTint="@color/black"
        android:layout_below="@id/text_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"/>




</RelativeLayout>